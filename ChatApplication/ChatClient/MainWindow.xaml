<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <ListBox Name="MessageList" Height="100"></ListBox>
            <TextBox Name="MessageTextBox"></TextBox>
            <Button Name="SendBtn" Content="Send" Click="SendBtnEvent"></Button>
            <Button Name="SendFileBtn" Content="Send file" Click="SendFileBtnEvent"></Button>
            <FlowDocumentScrollViewer Height="242">
                <FlowDocument Name="ChatHistory"/>
            </FlowDocumentScrollViewer>
        </StackPanel>
        
    </Grid>
</Window>
